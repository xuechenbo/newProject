<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:orientation="vertical">

    <include
        android:id="@+id/inc"
        layout="@layout/layout_title" />


    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/themeColor1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">


        <TextView
            android:id="@+id/phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="手机号 15498454251"
            android:textColor="@color/white" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="@dimen/dp_10"
            android:text="修改"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pass_login"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/themeColor1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="登录密码"
            android:textColor="@color/white" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="@dimen/dp_10"
            android:text="修改"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay_psw"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/themeColor1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="支付密码"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="@dimen/dp_10"
            android:text="去修改"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/themeColor1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="版本号"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="v" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/themeColor1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="清理缓存"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="@dimen/dp_5"
            android:text="43434" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_xy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/themeColor1"
        android:drawableRight="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:text="用户协议"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_ys"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/themeColor1"
        android:drawableRight="@drawable/arrow_right_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:text="隐私政策"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/themeColor1"
        android:text="退出登录"
        android:textColor="@color/btn_text_color"
        android:textSize="@dimen/sp_14" />


</LinearLayout>
