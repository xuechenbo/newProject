<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeColor1"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="通道名称"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <View style="@style/line1" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="还款总额"
            android:textColor="@color/theme_font_white"
            android:textSize="@dimen/dp_16"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/theme_fontColor"
            android:textSize="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintRight_toRightOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留金额"
            android:textColor="@color/theme_font_white"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintRight_toLeftOf="@+id/tv3"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"

            android:textColor="@color/theme_fontColor"
            android:textSize="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="@id/tv2"
            app:layout_constraintRight_toRightOf="@id/tv2"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="还款笔数"
            android:textColor="@color/theme_font_white"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/tv2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <TextView
            android:id="@+id/tv_hNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/theme_fontColor"
            android:textSize="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="@id/tv3"
            app:layout_constraintRight_toRightOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@+id/tv3" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="手续费"
            android:textColor="@color/theme_font_white"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@+id/tv1"
            app:layout_constraintRight_toRightOf="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/tv_limit" />

        <TextView
            android:id="@+id/tv_total_service_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/theme_fontColor"
            android:textSize="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="@+id/tv4"
            app:layout_constraintRight_toRightOf="@+id/tv4"
            app:layout_constraintTop_toBottomOf="@id/tv4" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>