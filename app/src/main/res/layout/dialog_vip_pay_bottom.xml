<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEED"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需支付金额"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="298.00"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="支付方式" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#d1d1cf" />

        <TextView
            android:id="@+id/tv_wxPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@drawable/wechat_icon"
            android:drawableRight="@drawable/item_right"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_15"
            android:text="微信支付" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#dcdcd8" />

        <TextView
            android:id="@+id/tv_zfbPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawableLeft="@drawable/alipay_icon"
            android:drawableRight="@drawable/item_right"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_15"
            android:text="支付宝支付" />


    </LinearLayout>

</LinearLayout>