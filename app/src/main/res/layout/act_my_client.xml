<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_solid_theme1_corner_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的社群"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/theme_fontColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll1_zt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1_ztNum"
                    style="@style/teamTextView" />

                <View style="@style/lineWight" />

                <TextView
                    style="@style/teamTextView1"
                    android:text="直推" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1_teamNum"
                    style="@style/teamTextView" />

                <View style="@style/lineWight" />

                <TextView
                    style="@style/teamTextView1"
                    android:text="团队" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1_real"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1_realNum"
                    style="@style/teamTextView" />

                <View style="@style/lineWight" />

                <TextView
                    style="@style/teamTextView1"
                    android:text="实名" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1_vip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1_vipNum"
                    style="@style/teamTextView" />

                <View style="@style/lineWight" />

                <TextView
                    style="@style/teamTextView1"
                    android:text="VIP用户" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_solid_theme1_corner_20"
